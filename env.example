# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_PATH=./database/database.sqlite

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@bulkdocgenerator.com
EMAIL_REPLY_TO=support@bulkdocgenerator.com

# Make.com Webhook Configuration
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/your-webhook-url
MAKE_API_KEY=your-make-api-key
MAKE_ENABLED=true

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_SECRET=your-api-key-secret-here

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_TEMPLATE_SIZE=10485760
MAX_CSV_SIZE=5242880

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Performance Configuration
MAX_CONCURRENT_JOBS=5
MAX_DOCUMENTS_PER_JOB=1000
GENERATION_TIMEOUT=300000

# External Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
