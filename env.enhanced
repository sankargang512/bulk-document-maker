# ========================================
# BULK DOCUMENT MAKER - ENHANCED CONFIG
# ========================================
# Copy this file to .env and customize for your environment

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
TRUST_PROXY=false
ENABLE_COMPRESSION=true
ENABLE_CACHING=false

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Rate Limiting
RATE_LIMIT_GENERAL=1000
RATE_LIMIT_GENERATION=100
RATE_LIMIT_UPLOAD=50

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# Authentication
REQUIRE_API_KEY=false
REQUIRE_JWT=false
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h
VALID_API_KEYS=test-api-key-12345678901234567890123456789012
REQUEST_SIGNING_SECRET=your-signing-secret

# File Validation
MAX_FILE_SIZE=52428800
ENABLE_MAGIC_NUMBER_CHECK=true
ENABLE_CONTENT_VALIDATION=true

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bulk_document_maker
DB_USERNAME=
DB_PASSWORD=
DB_PATH=./database/database.sqlite
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_ENABLE_LOGGING=false

# ========================================
# STORAGE CONFIGURATION
# ========================================
UPLOADS_PATH=./uploads
GENERATED_PATH=./generated
TEMP_PATH=./temp
COMPRESSED_PATH=./compressed

# Cloud Storage (Optional)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_REGION=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=
CLOUD_STORAGE_ENABLE_BACKUP=false

# File Processing
ENABLE_FILE_COMPRESSION=true
ENABLE_FILE_STREAMING=true
MAX_CONCURRENT_UPLOADS=5
FILE_CLEANUP_DELAY=300000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_ENABLE_REQUESTS=true
LOG_ENABLE_ERROR_TRACKING=true

# ========================================
# PERFORMANCE CONFIGURATION
# ========================================

# Caching
ENABLE_CACHING=false
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000
CACHE_ENABLE_COMPRESSION=true

# Processing
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=300000
ENABLE_WORKER_THREADS=false
WORKER_THREAD_COUNT=4

# Compression
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# ========================================
# EXTERNAL SERVICES
# ========================================

# OpenAI (for template analysis)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# Email Service
EMAIL_PROVIDER=smtp
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@bulkdocumentmaker.com
EMAIL_ENABLE_NOTIFICATIONS=false

# Make.com Webhook
MAKE_WEBHOOK_URL=
MAKE_ENABLE_WEBHOOKS=false
MAKE_WEBHOOK_SECRET=

# ========================================
# MONITORING CONFIGURATION
# ========================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=false
METRICS_PORT=3002
ENABLE_ALERTING=false
ALERT_WEBHOOK_URL=

# ========================================
# DEVELOPMENT OPTIONS
# ========================================
INITIALIZE_DATABASE=false
APP_VERSION=1.0.0

# ========================================
# SECURITY NOTES
# ========================================
# 1. Change all default secrets in production
# 2. Use strong, unique passwords
# 3. Enable API key authentication in production
# 4. Use HTTPS in production
# 5. Regularly rotate secrets
# 6. Monitor access logs
# 7. Enable file validation
# 8. Set appropriate rate limits
# 9. Use environment-specific configurations
# 10. Never commit .env files to version control
