{
  "name": "bulk-document-maker-backend",
  "version": "1.0.0",
  "description": "Backend API for bulk document generation service with template analysis and processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:api": "jest tests/api",
    "test:security": "jest tests/unit/middleware/security.test.js tests/unit/middleware/authentication.test.js tests/api/security.test.js",
    "test:performance": "jest tests/integration/documentGeneration.test.js --testNamePattern='Performance'",
    "test:ci": "jest --ci --coverage --watchAll=false --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:init": "node database/init.js",
    "db:reset": "rm -f database/database.sqlite && node database/init.js",
    "db:migrate": "node scripts/migrate.js",
    "db:backup": "bash scripts/backup.sh",
    "deploy": "bash scripts/deploy.sh production deploy",
    "deploy:rollback": "bash scripts/deploy.sh production rollback",
    "deploy:health": "bash scripts/deploy.sh production health",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop bulk-doc-generator-backend",
    "pm2:restart": "pm2 restart bulk-doc-generator-backend",
    "pm2:reload": "pm2 reload ecosystem.config.js --env production",
    "pm2:logs": "pm2 logs bulk-doc-generator-backend",
    "pm2:monitor": "pm2 monit",
    "docker:build": "docker build -f Dockerfile.production -t bulk-doc-generator-backend:latest .",
    "docker:run": "docker-compose -f docker-compose.production.yml up -d",
    "docker:stop": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "monitor": "bash scripts/monitor.sh",
    "health": "curl -f http://localhost:3001/api/health || exit 1"
  },
  "keywords": [
    "document-generation",
    "bulk-processing",
    "template-analysis",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Bulk Document Maker Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.1",
    "archiver": "^6.0.2",
    "axios": "^1.6.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "fs-extra": "^11.2.0",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "openai": "^5.12.2",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
